{
    "base": "base",
    "execute": [
        {
            "action": "load_folder"
        },
        {
            "action": "links",
            "dir": ".indexer/links"
        },
        {
            "action": "board", 
            "file": ".indexer/board.md"
        },
        {
            "action": "thumbs", 
            "width": 320,
            "height": 180
        },
        {
            "action": "index", 
            "intro": null,
            "file": ".indexer/cat_index.md",
            "sorting": {
                "orphan": "No category",
                "group_by": "category",
                "sort_by": "fulltitle",
                "reverse_sort": false
            }
        },
        {
            "action": "view", 
            "file": ".indexer/cat_view.md",
            "intro": null,
            "sorting": {
                "orphan": "No category",
                "group_by": "category",
                "sort_by": "fulltitle",
                "reverse_sort": false
            },
            "viewing": {
                "posts_per_row": 3,
                "empty_fig": null
            }
        }
    ]
}
