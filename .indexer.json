{
    "base": "base",
    "execute": [
        {
            "action": "load_folder"
        },
        {
            "action": "board", 
            "file": ".indexer/board.md"
        },
        {
            "action": "links",
            "dir": ".indexer/links"
        },
        {
            "action": "thumbs", 
            "width": 320,
            "height": 180
        },
        {
            "action": "index", 
            "intro": "intro.md",
            "file": "categorias.md",
            "sorting": {
                "orphan": "No category",
                "group_by": "category",
                "sort_by": "fulltitle",
                "reverse_sort": false
            }
        },
        {
            "action": "view", 
            "intro": "intro.md",
            "file": "view.md",
            "sorting": {
                "orphan": "No category",
                "group_by": "category",
                "sort_by": "fulltitle",
                "reverse_sort": false
            },
            "viewing": {
                "posts_per_row": 3,
                "empty_fig": null
            }
        },
        {
            "action": "posts",
            "dir": "_posts",
            "base_raw_remote": "https://raw.githubusercontent.com/senapk/senapk.github.io/master/base",
            "default_date": "1984-04-25",
            "categories_dir": "category"
        }
    ]
}
